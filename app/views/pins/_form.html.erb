<div class="row">
  <div class="col-md-6  col-md-offset-3">
      <div class="well well-md">

    <%= simple_form_for(@pin) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :image_file_size, class: "alert alert-error" %>
      <%= f.full_error :image_content_type, class: "alert alert-error" %>

<div class="form-group">
        <%= f.input :image, label: "Upload and image", class: "form-control" %><br>
        <%= f.text_field :description, as: :text, class: "form-control", placeholder: "Image description..."%>
</div>

      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-default" %>
      </div>
    <% end %>
</div>
</div>
</div>

