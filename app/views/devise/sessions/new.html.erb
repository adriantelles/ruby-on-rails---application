<div class="row">
  <div class="col-md-6  col-md-offset-3">
    <div class="well well-lg">
      <h2>Sign in</h2>

      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-controll'}) do |f| %>

      <!-- name and email fields -->

      <div class="form-group">
          <label class="sr-only" for="exampleInputEmail2">Email address</label>
          <%= f.label :email %><br />
          <%= f.email_field :email, :autofocus => true, type: "email", class: "form-control", id: "exampleInputEmail2", placeholder: "email@domain.com", autofocus: true %>
      </div>

      <!-- password and password confirm fields -->

      <div class="form-group">
          <label class="sr-only" for="exampleInputPassword2">Password</label>
          <%= f.label :password %>
          <%= f.password_field :password, type: "password", class: "form-control", id: "exampleInputPassword2", placeholder: "password" %><br>
      </div>

        <div class="form-group">
            <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
        </div>
      </div>
          <%= render "devise/shared/links" %>
   </div>
</div>

<% end %>

